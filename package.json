{
    "name": "blog.isielite",
    "description": "A Ghost theme",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=4.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Chandler Chappell",
        "email": "chan@ady.world",
        "url": "https://blog.isielitetraining.com"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "config": {
        "posts_per_page": 10,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "title_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "body_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "header_style": {
                "type": "select",
                "options": [
                    "Light",
                    "Accent color",
                    "Dark"
                ],
                "default": "Light"
            },
            "white_publication_logo_for_transparent_header": {
                "type": "image"
            },
            "email_signup_text": {
                "type": "text",
                "default": "Don't miss out on the latest stories and news. Subscribe to recieve email updates."
            },
            "footer_text": {
                "type": "text"
            },
            "enter_tag_slugs_for_primary_sections": {
                "type": "text",
                "group": "homepage"
            },
            "enter_tag_slugs_for_secondary_sections": {
                "type": "text",
                "group": "homepage"
            }
        }
    },
    "dependencies": {
        "prettier": "^2.6.2"
    }
}
